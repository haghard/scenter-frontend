# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET    /                          controllers.SportCenter.login(loginError: Boolean ?= false)

POST   /login                     controllers.SportCenter.authenticate


#GET    /login-oauth-cache         controllers.SportCenter.authenticateOauthThroughCache

GET    /login-oauth2              controllers.SportCenter.authenticateOauth(login: String, password: String)


GET    /logout                    controllers.SportCenter.logout

GET    /scenter                   controllers.Aggregator.index(stage: String)

GET    /login-oauth/:provider     controllers.OauthController.index(provider: String)

GET    /twitter-callback          controllers.Twitter.callback

GET    /github-callback           controllers.Github.callback


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.at(path="/public", file)
GET     /webjars/*file             controllers.WebJarAssets.at(file)
